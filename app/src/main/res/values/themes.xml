<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Epam_internship_android_kalolo" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <!-- My Customise theme-->

    <!-- create the default title component. -->
    <style name="DefaultTextStyle">
        <item name="android:textColor">@color/lightGray</item>
        <item name="android:textSize">11sp</item>
    </style>
    <!-- create the Subtitle component. -->
    <style name="SubtitleTextStyle">
        <item name="android:textColor">@color/darkGray</item>
        <item name="android:textSize">18sp</item>
    </style>
    <!-- create the Title for component MealList. -->
    <style name="Title_Text_Style" parent="SubtitleTextStyle">
        <item name="android:textColor">@color/darkGray</item>
        <item name="android:textSize">24sp</item>
    </style>

    <!-- create the SubTitle for Detail component. -->
    <style name="SubtitleDetail">
        <item name="android:textColor">@color/darkGray</item>
        <item name="android:textSize">20sp</item>
    </style>
    <!-- create the Default title for Detail component. -->
    <style name="Default_TextStyle_Detail" parent="DefaultTextStyle">
        <item name="android:textSize">18sp</item>
    </style>
</resources>